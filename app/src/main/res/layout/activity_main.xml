<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_activity_layout"
        tools:context=".MainActivity">

    <Button
            android:text="SAVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/activity_button"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameField" android:layout_marginTop="32dp"/>
    <Button
            android:text="ENABLE PERMISSIONS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/permission_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:id="@+id/tokenField"
                                                           app:errorEnabled="true"
                                                           android:visibility="gone"
                                                           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                                           android:hint="Enter Token" android:textSize="30sp"
                                                           app:layout_constraintEnd_toEndOf="parent"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           app:layout_constraintTop_toBottomOf="@+id/imageView"
                                                           android:layout_marginTop="32dp">
        <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                 android:layout_height="wrap_content"
                                                                 android:id="@+id/token_value"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:id="@+id/nameField"
                                                           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                                           android:hint="@string/enter_victim_name"
                                                           android:textSize="30sp"
                                                           android:visibility="gone"
                                                           app:layout_constraintEnd_toEndOf="parent"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           app:layout_constraintTop_toBottomOf="@+id/tokenField"
                                                           android:layout_marginTop="24dp">
        <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                 android:layout_height="wrap_content"
                                                                 android:id="@+id/name_value"/>
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
            android:layout_width="88dp"
            android:layout_height="85dp" app:srcCompat="@mipmap/ic_rat" android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="100dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>